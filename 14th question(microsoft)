#include <bits/stdc++.h>
using namespace std;

 // } Driver Code Ends
// User function Template for C++

class Solution{
public:
    int minSteps(int D){
        // code here
        int c=0;
        int sum=0;
        while(sum<D || (sum-D)%2)
        {
            c++;
            sum+=c;
        }
        // }
        // while(()
        // {
        //     sum+=c;
        //     c++;
        // }
        return c;
    }
};

// { Driver Code Starts.

int main(){
    int t;
    cin>>t;
    while(t--){
        int D;
        cin>>D;
        
        Solution ob;
        cout<<ob.minSteps(D)<<"\n";
    }
    return 0;
}  // } Driver Code Ends
